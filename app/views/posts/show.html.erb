<section>
  <div class='list-posts'>
    <h3><%= @post.title %> by <%= @post.users.name %> </h3>
    <p><%= @post.text %></p>
    <span class='like-comment'>
      Comments: <%= @post.comments_counter || 0 %>, 
      Likes: <%= @post.likes_counter || 0 %> 
    </span>
  </div>
  <ul class='post-comment'>      
    <% if @post.comments.length == 0 %>
      <p>No comments added!</p>
    <% else %>
      <% @post.comments.each do |comment| %>
        <li><%= comment.users.name %>: <%= comment.text %></li>
      <% end %>
    <% end %>
  </ul>
  <ul>
    <li><%= link_to "Edit post", edit_post_path(@post) %></li>
    <li><%= link_to "Delete post", post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this post?"
                  } %></li>
  </ul>
</section>
